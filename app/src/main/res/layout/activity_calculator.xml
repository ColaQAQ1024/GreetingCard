<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">
    <TableRow
        android:id="@+id/tr_one"
        android:layout_marginTop="200dp"
        style="@style/rowStyle">
        <Button
            style="@style/buttonStyle"
            android:text="C">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="←">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="+">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="-">
        </Button>
    </TableRow>
    <TableRow
        android:id="@+id/tr_two"
        style="@style/rowStyle">
        <Button
            style="@style/buttonStyle"
            android:text="7">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="8">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="9">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="*">
        </Button>
    </TableRow>
    <TableRow
        android:id="@+id/tr_three"
        style="@style/rowStyle">
        <Button
            style="@style/buttonStyle"
            android:text="4">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="5">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="6">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="/">
        </Button>
    </TableRow>
    <TableRow
        android:id="@+id/tr_four"
        style="@style/rowStyle">
        <Button
            style="@style/buttonStyle"
            android:text="1">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="2">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text="3">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:text=".">
        </Button>
    </TableRow>
    <TableRow
        android:id="@+id/tr_five"
        style="@style/rowStyle">
        <Button
            style="@style/buttonStyle"
            android:layout_span="2"
            android:text="0">
        </Button>
        <Button
            style="@style/buttonStyle"
            android:layout_span="2"
            android:text="=">
        </Button>
    </TableRow>
</TableLayout>